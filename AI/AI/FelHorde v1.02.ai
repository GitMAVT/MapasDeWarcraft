// Assigns units to attack based on the given attack group
//===========================================================================
function PrepareAttackGroup takes integer groupID returns nothing
    local integer all

    // Attack Group #1: All Units
    if (groupID == 1) then
        set all = GetUnitCountDone( hero_id )
        call AddAttackUnit( all, all, hero_id )
        if (gCond_HeroSecond) then
            set all = GetUnitCountDone( hero_id2 )
            call AddAttackUnit( all, all, hero_id2 )
        endif
        if (gCond_HeroThird) then
            set all = GetUnitCountDone( hero_id3 )
            call AddAttackUnit( all, all, hero_id3 )
        endif
        if (gCond_AttackWithGrunts) then
            set all = GetUnitCountDone( 'nchg' )
            call AddAttackUnit( all, all, 'nchg' )
        endif
        if (gCond_AttackWithCrossbow) then
            set all = GetUnitCountDone( 'owad' )
            call AddAttackUnit( all, all, 'owad' )
        endif
        if (gCond_AttackWithInfernalCatapult) then
            set all = GetUnitCountDone( 'nw2w' )
            call AddAttackUnit( all, all, 'nw2w' )
        endif
        if (gCond_AttackWithFelBrute) then
            set all = GetUnitCountDone( 'nspc' )
            call AddAttackUnit( all, all, 'nspc' )
        endif
        if (gCond_AttackWithFelWarlock) then
            set all = GetUnitCountDone( 'nchw' )
            call AddAttackUnit( all, all, 'nchw' )
        endif
        if (gCond_AttackWithFelCultist) then
            set all = GetUnitCountDone( 'odkt' )
            call AddAttackUnit( all, all, 'odkt' )
        endif
        if (gCond_AttackWithFelRaider) then
            set all = GetUnitCountDone( 'nchr' )
            call AddAttackUnit( all, all, 'nchr' )
        endif
        if (gCond_AttackWithFelLancer) then
            set all = GetUnitCountDone( 'ownr' )
            call AddAttackUnit( all, all, 'ownr' )
        endif
        if (gCond_AttackWithFelKodo) then
            set all = GetUnitCountDone( 'nckb' )
            call AddAttackUnit( all, all, 'nckb' )
