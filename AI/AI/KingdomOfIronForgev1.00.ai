function UpdateConditions takes nothing returns nothing
    set gCond_BuildTownHall = ( ( TownThreatened(  ) == false ) and ( ( GetUnitCount( 'htow' ) == 0 ) and ( ( GetUnitCount( 'hkee' ) == 0 ) and ( GetUnitCount( 'hcas' ) == 0 ) ) ) )
    set gCond_UpgradeKeep = ( ( TownThreatened(  ) == false ) and ( ( GetUnitCount( 'htow' ) > 0 ) and ( ( GetUnitCount( 'hkee' ) == 0 ) and ( GetUnitCount( 'hcas' ) == 0 ) ) ) )
    set gCond_UpgradeCastle = ( ( TownThreatened(  ) == false ) and ( ( GetUnitCount( 'hkee' ) > 0 ) and ( GetUnitCount( 'hcas' ) == 0 ) ) )
    set gCond_HeroFirst = ( GetUnitCountDone( 'halt' ) > 0 )
    set gCond_HeroSecond = ( ( GetUnitCountDone( 'halt' ) > 0 ) and ( ( GetUnitCountDone( 'hkee' ) > 0 ) or ( GetUnitCountDone( 'hcas' ) > 0 ) ) )
    set gCond_HeroThird = ( ( GetUnitCountDone( 'halt' ) > 0 ) and ( GetUnitCountDone( 'hcas' ) > 0 ) )
    set gCond_BuildGeneral = ( TownThreatened(  ) == false )
    set gCond_BuildFarm = ( ( TownThreatened(  ) == false ) and ( ( TotalFoodProduced(  ) < 200 ) and ( ( TotalFoodProduced(  ) - FoodUsed(  ) ) < 15 ) ) )
    set gCond_BuildlTowers = ( ( TownThreatened(  ) == false ) and ( ( ( GetUnitCount( 'hgtw' ) + GetUnitCount( 'hctw' ) ) + GetUnitCount( 'hatw' ) ) < 10 ) )
