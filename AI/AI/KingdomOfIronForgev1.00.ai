    set gCond_AttackWithBattlePriests = ( GetUnitCount( 'hmpr' ) > 0 )
    set gCond_AttackWithRunicCasters = ( GetUnitCount( 'hsor' ) > 0 )
    set gCond_AttackWithRunicBreakers = ( GetUnitCount( 'hspt' ) > 0 )
    set gCond_AttackWithMortarTeams = ( GetUnitCount( 'hmtm' ) > 0 )
    set gCond_AttackWithGyrocopters = ( GetUnitCount( 'hgyr' ) > 0 )
    set gCond_AttackWithSiegeEngines = ( GetUnitCount( 'hmtt' ) > 0 )
    set gCond_AttackWithGryphonRider = ( GetUnitCount( 'hgry' ) > 0 )
    set gCond_NeedExp = ( GetMinesOwned(  ) < 2 )
    set gCond_Workers1 = ( ( GetUnitCount( 'hpea' ) < 30 ) and ( ( TownHasMine( ( TownWithMine(  ) + 0 ) ) == true ) and ( TownHasHall( ( TownWithMine(  ) + 0 ) ) == true ) ) )
    set gCond_Workers2 = ( ( GetUnitCount( 'hpea' ) < 30 ) and ( ( TownHasMine( ( TownWithMine(  ) + 1 ) ) == true ) and ( TownHasHall( ( TownWithMine(  ) + 1 ) ) == true ) ) )
