//===========================================================================
// Returns true if the minimum forces for an attack exist
//===========================================================================
function HaveMinimumAttackers takes nothing returns boolean
    local integer count

    // Check for attack wave limit
    if (attackWave > 1) then
        return false
    endif

    // Attack Group: MinimunUnits
    set count = GetUnitCountDone( 'jtjw' )
    if (count < 3) then
        return false
    endif
    return true
endfunction

//===========================================================================
// Assigns units to attack based on the given attack group
//===========================================================================
function PrepareAttackGroup takes integer groupID returns nothing
    local integer all

    // Attack Group #1: AllUnits
    if (groupID == 1) then
        set all = GetUnitCountDone( hero_id )
        call AddAttackUnit( all, all, hero_id )
        set all = GetUnitCountDone( hero_id2 )
        call AddAttackUnit( all, all, hero_id2 )
        set all = GetUnitCountDone( hero_id3 )
        call AddAttackUnit( all, all, hero_id3 )
        if (gCond_AttackWithWatchers) then
            set all = GetUnitCountDone( 'jtjw' )
            call AddAttackUnit( all, all, 'jtjw' )
        endif
        if (gCond_AttackWithVoodooCannoners) then
            set all = GetUnitCountDone( 'jtvc' )
            call AddAttackUnit( all, all, 'jtvc' )
        endif
        if (gCond_AttackWithRaptors) then
            set all = GetUnitCountDone( 'jtwr' )
            call AddAttackUnit( all, all, 'jtwr' )
        endif
        if (gCond_AttackWithHeadHunters) then
            set all = GetUnitCountDone( 'jthh' )
            call AddAttackUnit( all, all, 'jthh' )
        endif
        if (gCond_AttackWithThrones) then
            set all = GetUnitCountDone( 'jtet' )
            call AddAttackUnit( all, all, 'jtet' )
        endif
        if (gCond_AttackWithWindRider) then
            set all = GetUnitCountDone( 'jtwt' )
            call AddAttackUnit( all, all, 'jtwt' )
        endif
        if (gCond_AttackWithBatRiders) then
            set all = GetUnitCountDone( 'jtbr' )
            call AddAttackUnit( all, all, 'jtbr' )
        endif
        if (gCond_AttackWithBoneCasters) then
            set all = GetUnitCountDone( 'jtbc' )
            call AddAttackUnit( all, all, 'jtbc' )
        endif
        if (gCond_AttackWithWitchDoctors) then
            set all = GetUnitCountDone( 'jtwd' )
            call AddAttackUnit( all, all, 'jtwd' )
        endif
        if (gCond_AttackWithHexxers) then
            set all = GetUnitCountDone( 'jtth' )
            call AddAttackUnit( all, all, 'jtth' )
        endif
        if (gCond_AttackWithTikiGolems) then
            set all = GetUnitCountDone( 'jttg' )
            call AddAttackUnit( all, all, 'jttg' )
